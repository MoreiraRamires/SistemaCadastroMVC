@model ContatoModel

@{
    ViewData["Title"] = "Contatos";
}

<div class="text-center">
    <h3 class="display-4">Realmente deseja apagar o contato @Model.Nome? </h3>
</div>

<a class="btn btn-primary d-block" asp-controller="Contato" asp-action="Index" role="button">Sim, quero apagar</a>
<a class="btn btn-danger d-block " asp-controller="Contato" asp-action="Index" role="button">Não, me arrependi</a>

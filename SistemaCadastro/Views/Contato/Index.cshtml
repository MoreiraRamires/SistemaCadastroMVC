@model IList<ContatoModel> 
@{
    ViewData["Title"] = "Contatos";
}

<div class="text-center">
    <h1 class="display-4">Contatos</h1>


    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (ContatoModel contato in Model)
            {
                <tr>
                    <th scope="row">@contato.Id</th>
                    <td>@contato.Nome</td>
                    <td>@contato.Email</td>
                    <td>@contato.Celular</td>
                    <td>
                        <div class="btn-group">
                            <a role="button" type="button" asp-controller="Contato" asp-route-id="@contato.Id"  asp-action="Editar" class="btn btn-secondary"> Editar</a>
                            <a role="button" type="button" asp-controller="Contato" asp-route-id="@contato.Id" asp-action="ApagarConfirmacao" class="btn btn-danger"> Apagar</a>

                        </div>
                    </td>
                </tr>

            }
            
            
        </tbody>
    </table>
    <a type="button" asp-controller="Contato" asp-action="Cadastrar" class="btn btn-primary d-block">Novo Contato</a>

    
</div>

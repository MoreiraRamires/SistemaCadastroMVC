@model ContatoModel
@{
    ViewData["Title"] = "Editar ";
}

<div class="text-left">
    <h1 class="display-4">Editando Contato</h1>

  

    <form asp-controller="Contato" asp-action="Alterar" method="post">
        <input type="hidden" asp-for="Id"/>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="inputNome">Nome</label>
                <input type="text" class="form-control" asp-for="Nome" id="inputNome" placeholder="Rafael">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail">Email</label>
                <input type="email" class="form-control" asp-for="Email" id="inputEmail" placeholder="rafael@gmail.com">
            </div>


            <div class="form-group col-md-6">
                <label for="inputCelular">Celular</label>
                <input type="text" class="form-control" id="inputCelular" asp-for="Celular" placeholder="1234">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Alterar</button>
        <a asp-controller="Contato" asp-action="Index"> Voltar</a>

    </form>
    
</div>
